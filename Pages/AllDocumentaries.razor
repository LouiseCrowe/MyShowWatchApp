@page "/alldocumentaries"
@using MyShowWatch.Shared
@using Microsoft.AspNetCore.Components
@inject HttpClient Http

<h1 class="page-title">All documentaries I'm tracking</h1>

<p>Here's a list of all your documentaries!</p>

@if (documentaries == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var show in documentaries)
            {
                <tr>
                    <td>@show.Title</td>
                    <td>
                        <a href="@($"showdetail/{show.Title}")" class="btn btn-primary table-btn">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {


    private Show[] documentaries;

    protected override async Task OnInitializedAsync()
    {
        documentaries = await Http.GetFromJsonAsync<Show[]>
            ("https://localhost:5001/Show/alldocumentaries");
    }

}
