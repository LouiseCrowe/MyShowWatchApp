@page "/"
@using MyShowWatch.Shared
@using Microsoft.AspNetCore.Components
@inject HttpClient Http

<h1 class="page-title">All shows I'm tracking</h1>

<p>Here's a list of all your shows!</p>

@if (shows == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Show Type</th>
                <th>Where it's at</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var show in shows)
            {
            <tr>
                <td>@show.Title</td>
                <td>@show.Status</td>
                <td>@show.ShowType</td>
                <td>
                    <a href="@($"showdetail/{show.Title}")" class="btn btn-primary table-btn">
                        <i class="fas fa-info-circle"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}

@code {


    private Show[] shows;

    protected override async Task OnInitializedAsync()
    {
        shows = await Http.GetFromJsonAsync<Show[]>("Show");
    }

}
